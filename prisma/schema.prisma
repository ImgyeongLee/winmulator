generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FloppyData {
  id        String        @id @default(cuid())
  createdAt DateTime      @default(now())
  email     String        @unique
  username  String
  filesize  Int           @default(0)
  filename  String
  disknum   Int           @default(0)
}
